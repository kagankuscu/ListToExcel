<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button Style -->
    <style name="Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:height">75dp</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="HeadLine1" parent="TextView">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="HeadLine2" parent="TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextHeadline1" parent="Text">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadLine2" parent="Text">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextHeadline3" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#aaa</item>

    </style>

    <style name="TextSmall" parent="TextHeadline1">
        <item name="android:textSize">14sp</item>
    </style>

</resources>